<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_margin="15dp"-->
<!--            android:layout_weight="1"-->

<!--            app:cardBackgroundColor="@color/no_color"-->
<!--            app:cardCornerRadius="30dp"-->
<!--            app:cardElevation="30dp">-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/bac_search"
                android:gravity="center"
                android:orientation="vertical">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:src="@drawable/hj"
                    app:civ_border_width="1dp" />

            </LinearLayout>
<!--        </androidx.cardview.widget.CardView>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:layout_weight="0"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="{ Welcome To Captain App } "
                android:textColor="@color/yellow"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="parking Your Vehicle Smartly"
                android:textColor="@color/alphaBlack2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Smart Parking Management Parking"
                android:textColor="@color/alpha_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="Solution at Your FingerPrint"
                android:textColor="@color/alphaBlack2" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="0"
                    android:drawableStart="@drawable/ic_baseline_star_rate_24"
                    android:drawableLeft="@drawable/ic_baseline_star_rate_24"
                    android:drawableTint="@color/yellow"
                    android:fontFamily="casual"
                    android:gravity="center"
                    android:text="Setting"
                    android:textColor="@color/yellow"
                    android:textSize="20dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/circ"
                    android:text="Sing In"
                    android:textColor="@color/white" />


                <Button
                    android:id="@+id/singUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/bac_search"
                    android:text="Sing Up"
                    android:textColor="@color/yellow" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>